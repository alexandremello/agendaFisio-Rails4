<h1>Listing exams</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Patient</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.date %></td>
        <td><%= exam.description %></td>
        <td><%= exam.patient_id %></td>
        <td><%= link_to 'Show', patient_exam_path(@patient, exam) %></td>
        <td><%= link_to 'Edit', edit_patient_exam_path(@patient, exam) %></td>
        <td><%= link_to 'Destroy', patient_exam_path(@patient, exam), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

